<div class="container top-down">
	<div class="col-md-8 col-md-offset-2">
		<div class="page-header center">
			<h1>Join The Society</h1>

			<p><span class="current-step">Create Your Account</span>  <span class="glyphicon glyphicon-chevron-right"></span>  <span class="thinny">Pick Your Plan</span> <span class="glyphicon glyphicon-chevron-right"></span> <span class="thinny">Checkout</span>
		</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="panel panel-default">
  	<div class="panel-body">
	  
	  <div class="form-group">
	  	<%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email Address" %>
	  </div>

	  <div class="form-group">
	  	<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
	  </div>

	  <div class="form-group">
	  	<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
	  </div>

	  <div class="form-group">
	  	<%= f.submit "Create Account", class: "btn btn-primary btn-lg btn-block" %>
	  </div>
	  <% end %>
	</div>

	<div class="panel-footer">
		<%= render "devise/shared/links" %>
	</div>

	</div>
	</div>
</div>